<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/large"
    android:orientation="vertical"
    tools:context=".FragmentDialogDemo">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large"
        app:contentPadding="@dimen/medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmation" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_input_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input confirmation" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_input_confirm_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input confirmation bottom" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large"
        app:contentPadding="@dimen/medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Info" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInfoList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="btnInfoList" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large"
        app:contentPadding="@dimen/medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>